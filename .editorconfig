# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.html]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.nix]
indent_size = 2

[*.{js,jsx,spec.jsx}]
indent_size = 2
indent_style = space
quote_type = single
max_line_length = 160

[elm-package.json]
indent_size = 4

[Makefile]
indent_style = tab

[*.{diff,md}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.scss]
quote_type = single
